<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niit.mapper.StudentMapper">
    <update id="updateStudentUserId">
        UPDATE student
        SET userId = #{userId}
        WHERE sNo = #{sno}
    </update>

    <select id="findStudentBySnoAndDepartment" resultType="com.niit.pojo.Student">
        SELECT *
        FROM student
        WHERE sNo = #{sno}
            AND dNo = #{dno};
    </select>
</mapper>