<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niit.mapper.UserMapper">
    <insert id="createUser">
        INSERT INTO user(username, password, userType, createdTime)
        VALUES(
               #{username},
               #{password},
               #{userType},
                now()
              );
    </insert>

    <select id="selectUsers" resultType="com.niit.pojo.User">
        SELECT *
        FROM user;
    </select>
    <select id="findUserByUsername" resultType="com.niit.pojo.User">
        SELECT *
        FROM user
        WHERE username = #{username};
    </select>

</mapper>